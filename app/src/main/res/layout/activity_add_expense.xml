<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appColor"
    android:orientation="vertical"
    android:padding="16dp"
    >

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_extra_bold"
            android:text="Add Expense"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:onClick="back"
            android:tint="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:src="@drawable/back" />

    </RelativeLayout>

    <EditText
        android:id="@+id/editTextExpenseAmount"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_bg"
        android:fontFamily="@font/inter_font"
        android:hint="Expense Amount"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:paddingStart="@dimen/_18sdp"
        android:textColor="@color/black"
        android:textColorHint="#979393"
        android:textSize="@dimen/_15sdp" />

    <Spinner
        android:id="@+id/spinnerExpenseCategory"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_bg"
        android:fontFamily="@font/inter_font"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextExpenseDate"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_bg"
        android:fontFamily="@font/inter_font"
        android:hint="Date of Expense"
        android:inputType="date"
        android:padding="10dp"
        android:paddingStart="@dimen/_18sdp"
        android:textColor="@color/black"
        android:textColorHint="#979393"
        android:textSize="@dimen/_15sdp"
        android:focusable="false"
        android:clickable="true" />

    <EditText
        android:id="@+id/editTextExpenseDescription"
        android:layout_width="match_parent"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_bg"
        android:fontFamily="@font/inter_font"
        android:padding="10dp"
        android:paddingStart="@dimen/_18sdp"
        android:textColor="@color/black"
        android:textColorHint="#979393"
        android:textSize="@dimen/_15sdp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSaveExpense"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/inter_medium"
        android:text="Add Expense"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14dp" />

</LinearLayout>
