<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/appColor"
        android:orientation="vertical">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/appColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/imageView2"
                android:fontFamily="@font/inter_extra_bold"
                android:text="Set Pin"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:onClick="back"
                android:src="@drawable/back"
                app:tint="@color/white" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/_15sdp"
        android:padding="40dp">

        <EditText
            android:id="@+id/pin_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/edit_bg"
            android:fontFamily="@font/inter_medium"
            android:hint="Enter Pin"
            android:inputType="number"
            android:paddingStart="18dp"
            android:textColor="@color/black"
            android:textColorHint="#BDBDBD"
            android:textSize="@dimen/_15sdp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/inter_light"
            android:text="You can set any PIN here, which you will need to enter in the app to gain access. This will enhance the security of the app"
            android:textSize="12dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save_pin_button"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/forgot_button"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/inter_medium"
            android:text="Save Pin"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14dp" />

    </LinearLayout>


</RelativeLayout>

