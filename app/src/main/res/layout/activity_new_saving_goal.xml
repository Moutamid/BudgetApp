<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appColor"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >

        <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_extra_bold"
            android:text="New Savings Goal"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:onClick="back"
            android:tint="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:src="@drawable/back" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <EditText
        android:id="@+id/editTextGoalName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_bg"
        android:fontFamily="@font/inter_font"
        android:hint="Goal Name"
        android:inputType="text"
        android:padding="10dp"
        android:paddingStart="@dimen/_18sdp"
        android:textColor="@color/black"
        android:textColorHint="#979393"
        android:textSize="@dimen/_15sdp" />

    <EditText
        android:id="@+id/editTextTimeOfAchievement"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_bg"
        android:fontFamily="@font/inter_font"
        android:hint="Date of Achievement"
        android:inputType="datetime"
        android:padding="10dp"
        android:paddingStart="@dimen/_18sdp"
        android:textColor="@color/black"
        android:textColorHint="#979393"
        android:textSize="@dimen/_15sdp" />

        <EditText
            android:id="@+id/editTextAmount"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/edit_bg"
            android:fontFamily="@font/inter_font"
            android:hint="Amount"
            android:inputType="number"
            android:padding="10dp"
            android:paddingStart="@dimen/_18sdp"
            android:textColor="@color/black"
            android:textColorHint="#979393"
        android:textSize="@dimen/_15sdp"/>

        <EditText
            android:id="@+id/editTextSaved"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/edit_bg"
            android:fontFamily="@font/inter_font"
            android:hint="Already Saved"
            android:inputType="number"
            android:padding="10dp"
            android:paddingStart="@dimen/_18sdp"
            android:textColor="@color/black"
            android:textColorHint="#979393"
            android:textSize="@dimen/_15sdp" />

    <Spinner
        android:id="@+id/spinnerPaymentOption"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:visibility="gone"
        android:background="@drawable/edit_bg"
        android:fontFamily="@font/inter_font"
        android:layout_below="@id/editTextTimeOfAchievement"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextNotificationTitle"
        android:layout_width="match_parent"
        android:hint="Notification Title"
        android:inputType="text"
        android:layout_below="@id/spinnerPaymentOption"

        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_bg"
        android:fontFamily="@font/inter_font"
        android:padding="10dp"
        android:paddingStart="@dimen/_18sdp"
        android:textColor="@color/black"
        android:textColorHint="#979393"
        android:textSize="@dimen/_15sdp"
        />

    <EditText
        android:id="@+id/editTextNotificationDescription"
        android:layout_width="match_parent"
        android:hint="Notification Description"
        android:inputType="textMultiLine"
        android:layout_below="@id/editTextNotificationTitle"
        android:layout_marginTop="16dp"


        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_bg"
        android:fontFamily="@font/inter_font"
        android:padding="10dp"
        android:paddingStart="@dimen/_18sdp"
        android:textColor="@color/black"
        android:textColorHint="#979393"
        android:textSize="@dimen/_15sdp"/>

        <EditText
            android:id="@+id/editTextNote"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/editTextNotificationTitle"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"


            android:layout_marginEnd="30dp"
            android:background="@drawable/edit_bg"
            android:fontFamily="@font/inter_font"
            android:hint="Note"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:paddingStart="@dimen/_18sdp"
            android:textColor="@color/black"
            android:textColorHint="#979393"
            android:textSize="@dimen/_15sdp" />

        <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSaveGoal"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_above="@+id/sign_up_button"
        android:layout_marginStart="30dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/inter_medium"
        android:text="Create New Goal"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>

</ScrollView>
